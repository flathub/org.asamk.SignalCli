{
    "id": "org.asamk.SignalCli",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.openjdk21"
    ],
    "command": "signal-cli",
    "finish-args": [
        "--filesystem=home",
        "--share=network",
        "--share=ipc",
        "--env=JAVA_HOME=/app/jre"
    ],
    "modules": [
        {
            "name": "openjdk",
            "buildsystem": "simple",
            "build-commands": [
                "/usr/lib/sdk/openjdk21/install.sh"
            ]
        },
        {
            "name": "signal-cli",
            "buildsystem": "simple",
            "build-commands": [
                "cp -r signal-cli/* /app/",
                "install -Dm644 org.asamk.SignalCli.metainfo.xml /app/share/metainfo/org.asamk.SignalCli.metainfo.xml",
                "install -Dm644 icon.svg /app/share/icons/hicolor/scalable/apps/org.asamk.SignalCli.svg"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/AsamK/signal-cli/releases/download/v0.13.0/signal-cli-0.13.0.tar.gz",
                    "dest": "signal-cli",
                    "sha256": "62a1e5453cfa4000bfb255378225f1ffcc71c72dc22ddad4b11f0db1773e07ce",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/asamk/signal-cli/releases/latest",
                        "version-query": ".tag_name | sub(\"^v\"; \"\")",
                        "url-query": ".assets[] | select(.name==\"signal-cli-\" + $version + \".tar.gz\") | .browser_download_url"
                    }
                },
                {
                    "type": "file",
                    "path": "org.asamk.SignalCli.metainfo.xml"
                },
                {
                    "type": "file",
                    "url": "https://raw.githubusercontent.com/AsamK/signal-cli/master/data/icon.svg",
                    "sha256": "c2c20fb3e6da8f8add3a53dcbc12212f52e7347da1d3af4fae018d02f19b7d0c"
                }
            ]
        }
    ]
}
